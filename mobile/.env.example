# Border Badge Mobile App - Environment Variables
# Copy this file to .env.local and fill in your values

# API Configuration
# NOTE: iOS Simulator cannot access localhost. Use your machine's IP address instead.
# Find your IP: ifconfig | grep "inet " | grep -v 127.0.0.1
EXPO_PUBLIC_API_URL=http://192.168.1.100:8000

# Supabase Configuration
EXPO_PUBLIC_SUPABASE_URL=your-supabase-url
EXPO_PUBLIC_SUPABASE_ANON_KEY=your-supabase-anon-key

# App Environment: development | staging | production
EXPO_PUBLIC_APP_ENV=development

# Debug Features
EXPO_PUBLIC_ENABLE_DEV_TOOLS=true

# Google Places API
EXPO_PUBLIC_GOOGLE_PLACES_API_KEY=your-google-places-api-key

# Web URL for public sharing links (used for list share URLs)
# In production, this would be the public-facing web URL (e.g., https://borderbadge.app)
# In development, it's the same as API URL since backend serves public pages
EXPO_PUBLIC_WEB_BASE_URL=http://192.168.1.100:8000

# PostHog Analytics (Optional)
# Only required for production analytics. In development, events are logged to console.
# Get your API key from: https://posthog.com/
EXPO_PUBLIC_POSTHOG_API_KEY=your-posthog-api-key
# PostHog host - defaults to https://us.i.posthog.com if not specified
EXPO_PUBLIC_POSTHOG_HOST=https://us.i.posthog.com
